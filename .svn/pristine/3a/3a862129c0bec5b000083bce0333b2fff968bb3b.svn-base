<script type="text/javascript">
	$(function () {
        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        })
        $("#addcont").validate({
            rules:{
                title:{
                    required:true,
                },
                source:{
                    required:true,
                },
                description:{
                    required:true,
                },
                content:{
                    required:true,
                },
            },
        });
    })
</script>
